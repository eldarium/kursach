<UserControl x:Class="kursach.Controls.Search.SearchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:kursach"
             xmlns:ext="clr-namespace:kursach"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Lucida Sans" />
			<Setter Property="Padding" Value="5" />
		</Style>
	</UserControl.Resources>
	<Grid>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"
		            MouseEnter="SearchButton_MouseEnter" MouseLeave="SearchButton_MouseLeave">
			<StackPanel Orientation="Horizontal" x:Name="SearchPanel">
				<TextBox x:Name="SearchBox" Width="0" />
				<ComboBox x:Name="SearchScopeBox" Width="0" />
			</StackPanel>
			<Button Style="{StaticResource RoundCorner}" ext:StyleExt.Color="{StaticResource BlueButtonColor}" KeyDown="Button_KeyDown">
				<TextBlock>asd</TextBlock>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>